{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["es6", "es2015.promise", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "compileOnSave": false
}
